<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lingshi.erp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.lingshi.erp.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.lingshi.erp.activity.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lingshi.erp.activity.PersonalInfoActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.lingshi.erp.activity.PersonHeadActivity"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>